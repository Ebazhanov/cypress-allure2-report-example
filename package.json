{
  "name": "cypress-allure-example",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/Ebazhanov/cypress-allure-example.git",
  "author": "Evgeny Bazhanov <evg.bazhanov@yahoo.com>",
  "license": "MIT",
  "scripts": {
    "cy:open": "yarn cypress open allure=true --browser chrome",
    "cy:run": "yarn cypress run allure=true --browser chrome",
    "allure:report": "allure generate allure-results --clean -o allure-report",
    "allure:clear": "rm -r allure-results/ allure-report cypress/screenshots || true"
  },
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^1.1.0",
    "cypress": "3.8.3"
  }
}
